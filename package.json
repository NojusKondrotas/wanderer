{
  "name": "wanderer",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "description": "An experimental cross-platform organising app for wandering ideas.",
  "repository": "https://github.com/NojusKondrotas/wanderer",
  "type": "module",
  "scripts": {
    "b-ejs": "node ./src/dev/build-ejs.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "fresh": "rimraf ./src/saves && cd src && mkdir saves && cd .. && electron .",
    "start-s": "npm run c-sass && electron .",
    "fresh-s": "npm run c-sass && npm run fresh",
    "fresh-b": "npm run b-ejs && npm run fresh",
    "fresh-b-s": "npm run b-ejs && npm run fresh-s",
    "c-sass": "sass ./src/main/styles.scss ./src/main/styles.css && sass ./src/main/titlebar-style.scss ./src/main/titlebar-style.css && sass ./src/dev/titlebars/prompts/link/titlebar-style.scss ./src/dev/titlebars/prompts/link/titlebar-style.css && sass ./src/main/prompts/configs/configs.scss ./src/main/prompts/configs/configs.css"
  },
  "keywords": [],
  "author": "Nojus Kondrotas <nojus.kondrotas23@gmail.com>",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "ejs": "^3.1.10",
    "electron": "^37.2.4",
    "rimraf": "^6.0.1",
    "sass": "^1.91.0"
  },
  "dependencies": {
    "@hurdlegroup/robotjs": "^0.12.3"
  }
}
